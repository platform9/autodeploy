##
## Ansible Inventory
##
[all]
[all:vars]
ansible_ssh_pass=winterwonderland
ansible_sudo_pass=winterwonderland

################################################################################################
## Optional Settings
################################################################################################
manage_network=True
bond_ifname=bond0
bond_mode=1
bond_mtu=9000


## network configuration for bond (implemented if manage_network=True)
[bond-config]
kvm-01 bond_members='ens224' bond_sub_interfaces='[{"vlanid":"215","ip":"172.16.215.10","mask":"255.255.255.0"},{"vlanid":"216","ip":"172.16.216.10","mask":"255.255.255.0"}]'
kvm-02 bond_members='ens224' bond_sub_interfaces='[{"vlanid":"215","ip":"172.16.215.11","mask":"255.255.255.0"},{"vlanid":"216","ip":"172.16.216.11","mask":"255.255.255.0"}]'
kvm-03 bond_members='ens224' bond_sub_interfaces='[{"vlanid":"215","ip":"172.16.215.12","mask":"255.255.255.0"},{"vlanid":"216","ip":"172.16.216.12","mask":"255.255.255.0"}]'
kvm-04 bond_members='ens224' bond_sub_interfaces='[{"vlanid":"215","ip":"172.16.215.13","mask":"255.255.255.0"},{"vlanid":"216","ip":"172.16.216.13","mask":"255.255.255.0"}]'

################################################################################################
## OpenStack Groups
################################################################################################
[pmo:children]
hypervisors
glance
cinder

## global variables defined in group_vars/hypervisors.yml
[hypervisors]
kvm-01 ansible_host=172.16.7.45 ansible_user=ubuntu vm_console=172.16.215.10 ha_cluster_ip=172.16.215.10 tunnel_ip=172.16.216.10 dhcp=on snat=on
kvm-02 ansible_host=172.16.7.212 ansible_user=ubuntu vm_console=172.16.215.11 ha_cluster_ip=172.16.215.11 tunnel_ip=172.16.216.11 dhcp=on snat=on
kvm-03 ansible_host=172.16.7.208 ansible_user=ubuntu vm_console=172.16.215.12 ha_cluster_ip=172.16.215.12 tunnel_ip=172.16.216.12 dhcp=on snat=on
kvm-04 ansible_host=172.16.7.115 ansible_user=ubuntu vm_console=172.16.215.13 ha_cluster_ip=172.16.215.13 tunnel_ip=172.16.216.13 dhcp=on snat=on

## global variables defined in group_vars/glance.yml
[glance]
kvm-01 glance_ip=172.16.7.45 glance_public_endpoint=True

## global variables defined in group_vars/cinder.yml
[cinder]
kvm-01 cinder_ip=172.16.7.45 pvs=["/dev/sdb","/dev/sdc","/dev/sdd"]

